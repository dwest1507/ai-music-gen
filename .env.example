# Modal API credentials (get from modal.com dashboard)
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret

# Session security (generate with: openssl rand -hex 32)
SESSION_SECRET=your_session_secret_here

# Frontend URL for CORS (update for production)
FRONTEND_URL=http://localhost:3000

# Backen URL for API
NEXT_PUBLIC_API_URL=https://your-production-app.up.railway.app

# Redis connection (auto-configured in docker-compose)
REDIS_URL=redis://localhost:6379

# Cloudflare S3 
STORAGE_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY_ID=your_access_key_id
STORAGE_SECRET_ACCESS_KEY=your_secret_access_key
STORAGE_BUCKET_NAME=your_bucket_name
STORAGE_REGION=auto